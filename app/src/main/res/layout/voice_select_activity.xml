<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VoiceSelect_Activity"
    android:orientation="vertical">
<include
    layout="@layout/tool_bar"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:src="@mipmap/bar"
        android:layout_marginTop="-5dp"/>
    <ScrollView

        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp">

        <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/voice"
            android:textColor="@color/gray_nine"
            android:textSize="@dimen/_27sdp" />

        <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_a_voice"
        android:textSize="@dimen/_20sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/gray_nine"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"/>
        <!--one-->
    <LinearLayout
        android:id="@+id/ll_alice_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal"
        android:background="@mipmap/alice_bg_two"
        android:layout_marginTop="@dimen/_15sdp"
        android:weightSum="1"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@mipmap/female_one"/>
        <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/alice"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="0.3"
            android:padding="@dimen/_5sdp"
            android:src="@mipmap/flag_one"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.2"
            android:src="@mipmap/play_btn"
            android:padding="@dimen/_5sdp"/>

    </LinearLayout>
        <!--two-->
        <LinearLayout
            android:id="@+id/ll_tiff_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:background="@mipmap/signup_fb_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="1"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@mipmap/female_two"/>
            <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/tiffany"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.3"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/flag_two"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="0.2"
                android:src="@mipmap/play_btn"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>
        <!--three-->
        <LinearLayout
            android:id="@+id/ll_kevin_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:background="@mipmap/blue_curve_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="1"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@mipmap/male_one"/>
            <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/kevin"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.3"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/flag_one"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="0.2"
                android:src="@mipmap/play_btn"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>

        <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/when_is_the"
            android:textColor="@color/gray_nine"
            android:textSize="@dimen/_17sdp" />

        <!--time-->
        <!--  android:background="@mipmap/blue_curve_bg"-->
        <!-- android:backgroundTint="@color/white"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"

            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="1"

            android:layout_gravity="center"
            android:gravity="center">

            <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="0.2"

                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
               android:background="@mipmap/time"/>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="@dimen/_15sdp"
    android:layout_weight="0.5"></LinearLayout>
            <ImageView
                android:id="@+id/toggleButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="0.15"
              android:background="@mipmap/toggle_btn"/>

        </LinearLayout>

        <com.example.meditationapp.Custom_Widgets.CustomBoldtextView
            android:id="@+id/img_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@mipmap/next_btn"/>

    </LinearLayout>

    </ScrollView>
</LinearLayout>